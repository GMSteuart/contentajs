{
  "name": "@contentacms/contentajs",
  "version": "0.0.0-development",
  "description": "A nodejs server that proxies to Contenta CMS and holds custom code.",
  "main": "lib/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/contentacms/contentajs.git"
  },
  "bugs": {
    "url": "https://github.com/contentacms/contentajs/issues"
  },
  "homepage": "https://github.com/contentacms/contentajs#readme",
  "author": "Mateu Aguil√≥ Bosch (e0ipso) <mateu.aguilo.bosch@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "npm run build && NODE_ENV=test jest --coverage",
    "test-ci": "npm run build && NODE_ENV=test jest --coverage --ci --runInBand",
    "debug-test": "npm run build && NODE_ENV=test node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "npm run build && npm run flow && npm run lint && npm run emdaer",
    "emdaer": "emdaer && git add *.md",
    "prepush": "npm test",
    "postinstall": "npm run build",
    "flow": "flow",
    "build": "rimraf lib && flow-remove-types --all src/ --out-dir lib/",
    "lint": "eslint .",
    "lint-json": "eslint --format=json . > ./__coverage__/eslint.json",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-angular": "^6.1.3",
    "@emdaer/cli": "^2.4.0",
    "@emdaer/plugin-contributors-details-github": "^2.4.0",
    "@emdaer/plugin-import": "^2.4.0",
    "@emdaer/plugin-license-reference": "^2.4.0",
    "@emdaer/plugin-shields": "^2.4.0",
    "@emdaer/plugin-value-from-package": "^2.4.0",
    "@emdaer/transform-prettier": "^2.4.0",
    "@emdaer/transform-table-of-contents": "^2.4.0",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "flow-bin": "^0.71.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "semantic-release": "^15.4.0",
    "semantic-release-conventional-commits": "^2.0.0"
  },
  "dependencies": {
    "config": "^1.30.0",
    "coveralls": "^3.0.1",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "generic-pool": "^3.4.2",
    "ioredis": "^3.2.2",
    "jsonrpc-lite": "^1.3.1",
    "lodash": "^4.17.10",
    "redis-commands": "^1.3.5",
    "rimraf": "^2.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "jest": {
    "coverageDirectory": "__coverage__",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mocks"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "analyzeCommits": "semantic-release-conventional-commits"
  }
}
